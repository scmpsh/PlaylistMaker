<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultLayout">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Main" parent="DefaultLayout">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Header">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/title_22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/dimen_16dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsButton">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/string_16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="SettingsSwitch" parent="SettingsButton">
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
    </style>

    <style name="SearchEditText">
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="ClearSearch">
        <item name="tint">@color/black</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TrackAuthor">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ArrowForward">
        <item name="tint">@color/white</item>
    </style>

    <style name="TrackDelimiter">
        <item name="tint">@color/white</item>
    </style>
</resources>