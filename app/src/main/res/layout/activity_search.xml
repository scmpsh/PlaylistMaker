<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_layout"
    style="@style/DefaultLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/leave_search"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="24dp"
        android:paddingHorizontal="@dimen/dimen_16dp"
        android:paddingTop="@dimen/dimen_14dp"
        android:paddingBottom="@dimen/dimen_16dp"
        android:text="@string/search_title"
        app:drawableStartCompat="@drawable/ic_arrow_back" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingHorizontal="@dimen/dimen_16dp">

        <EditText
            android:id="@+id/search_input"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_search"
            android:drawableStart="@drawable/ic_search_input_16"
            android:drawablePadding="@dimen/dimen_8dp"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search_hint"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:paddingHorizontal="13dp"
            android:radius="@dimen/dimen_16dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/blue"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="@dimen/string_16sp"
            android:theme="@style/SearchEditText" />

        <ImageView
            android:id="@+id/clear_search_button"
            style="@style/ClearSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_clear_button_16"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimen_16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>